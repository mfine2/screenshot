{
  "name": "Screenshot Send To Server",
  "version": "0.1",
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Take a Screenshot!"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "persistent": false,
    "scripts": [
                "common.js",
                "background.js"
               ]
  },
  /*
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
  }],
  */
  "manifest_version": 2
}
